@model IEnumerable<HomeLoan1.Models.AllUsers>

@{
    ViewBag.Title = "Verified";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
    WebGrid webGrid = new WebGrid(source: Model, rowsPerPage: 10);
}

<center><h2>Verified Applications</h2></center>



@webGrid.GetHtml(
       htmlAttributes: new { @id = "WebGrid", @class = "Grid webgrid-table1" },

       columns: webGrid.Columns(
                webGrid.Column("First_Name", "First Name"),
               webGrid.Column("Last_Name", "Last Name"),
             webGrid.Column("Email", "Email"),
              webGrid.Column("Phone_Number","Mobile Number"),
              webGrid.Column("Date_Of_Birth", "Date of Birth", format: (item) => string.Format("{0:dd-MMM-yyyy}", item.Date_Of_Birth)),
             webGrid.Column("Gender", "Gender"),
              webGrid.Column("Amount", "Loan Amount"),
            webGrid.Column(format: (item) => Html.ActionLink("View Details", "ViewVDetails", new { id = item.Application_ID }), style: "column-action")))


<br />
    @Html.ActionLink("Go to Previous Page", "AdminHome")

