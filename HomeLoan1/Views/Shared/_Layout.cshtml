                        <li>@Html.ActionLink("User Login", "UserLogin", "User",new { @class = "my-class" },null)</li>
                        <li>@Html.ActionLink("Admin Login", "AdminLogin", "Admin", new { @class = "my-class" },null)</li>
                    </ul>*@
                @Html.Partial("_Login")
