    </div>

    @RenderBody()



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



    <footer style="position:fixed; bottom:0;width:100%;font-size:16px;  background-color: black; padding: 23px;">

        @Html.ActionLink("About Us","AboutUs","User",new { @class = "my-class" }) &nbsp;&nbsp;&nbsp;
        @Html.ActionLink("FAQ","FAQ","User",new { @class = "my-class" })




        <center> <p style="color:whitesmoke; font-size:small">&copy; @DateTime.Now.Year - Homeberg All rights reserved</p></center>

